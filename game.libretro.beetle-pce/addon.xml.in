<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.beetle-pce"
		name="NEC - PC Engine / SuperGrafx / CD (Beetle PCE)"
		version="0.9.48.1"
		provider-name="Mednafen Team">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>pce|sgx|cue|ccd|chd|toc|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
